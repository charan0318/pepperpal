# Pepper Pal — Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# REQUIRED
# ============================================

# Telegram Bot Token (from @BotFather)
BOT_TOKEN=

# Bot username without @ (must match your bot's username)
BOT_USERNAME=

# ============================================
# REQUIRED — AI
# ============================================

# OpenRouter API Key
OPENROUTER_API_KEY=

# Model to use
# See https://openrouter.ai/models for options
OPENROUTER_MODEL=your_openrouter_model_name

# Temperature for responses (0.0-1.0, lower = more deterministic)
OPENROUTER_TEMPERATURE=0.1

# Maximum tokens for AI response (increased for free model)
OPENROUTER_MAX_TOKENS=800

# Request timeout in milliseconds (default: 30000)
OPENROUTER_TIMEOUT_MS=30000

# ============================================
# OPTIONAL — Admin Control
# ============================================

# Comma-separated list of Telegram user IDs who are always admins
# These users can control bot modes regardless of group admin status
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=

# ============================================
# OPTIONAL — Rate Limiting
# ============================================

# Maximum messages per user within the time window (default: 5)
RATE_LIMIT_MAX=5

# Time window in seconds for rate limiting (default: 60)
RATE_LIMIT_WINDOW=60

# ============================================
# DEPLOYMENT — Vercel
# ============================================

# Webhook URL for Telegram (set automatically by Vercel)
# Format: https://your-project.vercel.app/api/webhook
# Leave empty for local development (uses polling)
WEBHOOK_URL=

# Webhook secret for additional security (optional but recommended)
# Generate with: openssl rand -hex 32
WEBHOOK_SECRET=

# ============================================
# OPTIONAL — Logging
# ============================================

# Log level: DEBUG, INFO, WARN, ERROR (default: INFO)
LOG_LEVEL=INFO

# Environment: development, production
NODE_ENV=development
